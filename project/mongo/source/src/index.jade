												| маршрут подобрали красивый. Cпасибо вам, 
												| нам все понравилось.
									
								
			// ADDRESS

			section#address.address
				.container
					.row
						.sm-12.text-center
							span.address-head--ico
							h3.h3.h3--dark Запишите адрес аэропорта
							span.post-address-aero Всеволожск, улица Аэродромная 19а

					.row.office-row
						.sm-4.col.office
							span.office__name Наш офис в Питере:
							span.office__address Литейный 14Б 
								br
								| 12:00 - 19:00
							span.office__phone 746-67-33

						.sm-4.col.office
							span.office__name Наш офис во Всеволожске:
							span.office__address Аэродромная 19А
								br
								| 12:00 - 19:00
							span.office__phone 746-67-33

						.sm-4.col.contact
							span.contact__email-ico
							a.contact__email(href="mailto:mnebyvnebo@gmail.com") mnebyvnebo@gmail.com
							.social-row
								a.contact__social.contact__social--vk(href="http://vk.com" target="_blank")
								a.contact__social.contact__social--fb(href="http://facebook.com" target="_blank")
								a.contact__social.contact__social--insta(href="http://instagram.com" target="_blank")


