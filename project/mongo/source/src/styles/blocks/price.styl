.price
	padding 95px 0
	
	&__description
		font-size 18px
		font-style italic
		line-height 24px
		padding-right 120px
	
label
	line-height 40px
	font-size 18px
	padding-right 0px
	
.form__label
	padding-right 0
	padding-left 0
	
	&--child
		padding-right 20px
	
.form__select
input[type=text]
	display block
	box-sizing border-box
	font-size 18px
	line-height 26px
	background-color #fff
	border 1px solid #d5d5d5
	border-radius 5px
	margin-bottom 20px
	appearance none
	outline none
	background-repeat no-repeat
	
	&:focus
		border 2px solid #aed6ff
		border-radius 5px
		
input[type=text]
	padding 7px 10px 7px 40px
	background-position 10px center
	
input[type=text]:focus
	padding 6px 9px 6px 39px
	background-position 9px center

.input-name
	background-image url(../img/price-name.png)
	
.input-phone
	background-image url(../img/price-phone.png)

input.input-phone
	margin-bottom 40px
	
.form__select
	padding 7px 10px 7px 10px
	background-image url(../img/price-1.png)
	background-position 95% center
	&:focus
		padding 6px 9px 6px 9px
		background-position 95% center
	
	&--small
		background-position 77% center
		&:focus
			background-position 77% center
	
.form-price
	margin-top 40px
	margin-left -18px
	margin-right -18px

.price-sum
	padding-top 5px
	font-size 18px
	font-weight 700
	line-height 44px
	vertical-align middle
	
	&__cash
		margin-left 15px
		font-size 38px
		font-weight 500
		line-height 44px
		color #f97e7e
		vertical-align middle
		
.btn-cash
	padding 13px 40px
	font-size 18px
	font-weight 500
	background-color #46b0dc
	border-radius 5px
	color #fff
	border none
	outline none