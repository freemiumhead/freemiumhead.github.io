.how
	bg-cover(url(../img/content/howbg.jpg))
	background-position 50% 0%
	
.ball-area
	position relative
	min-height 100px
	margin-top 100px
	padding 230px 0 130px
	background-image url(../img/content/how-path.png)
	background-repeat no-repeat
	background-position 50% 50%

.ball
	position absolute
	max-width 95px
	text-align center
	
	&:before
		content ''
		position absolute
		top 30px
		left 50%
		transform translateX(-50%)
		sprite($how_ball)
	
	&:after
		content ''
		position absolute
		top 44px
		left 50%
		transform translateX(-50%)
		color #fff
		font-weight 500
	
	&--1
		top 180px
		left 0
		&:after
			content '1'
		
	&--2
		top 100px
		left 250px
		&:after
			content '2'
			top 56px
		&:before
			top 44px
		
	&--3
		top 5px
		left 50%
		transform translateX(-50%)
		&:after
			content '3'
		
	&--4
		top 110px
		right 250px
		&:after
			content '4'
		
	&--5
		top 180px
		right 0
		&:after
			content '5'
			
	&__txt
		color #454545
		
.time-to-fly
	padding 30px 0
	background-color rgba(#000 .4)
	
.h3
	margin 0
	padding 0
	font-size 32px
	font-weight 500
	line-height 26px
	color #fff