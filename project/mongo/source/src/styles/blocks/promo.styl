.promo
	bg-cover(url(../img/content/promo-bg.jpg))
	padding 178px 0 97px
	position relative
	overflow hidden
	
	&:after,
	&:before
		position absolute
	
	&:before
		content ''
		bottom 0px
		left 50%
		width 0
		height 0
		border-bottom 150px solid #fff
		border-left 1000px solid transparent	
		
	&:after
		content ''
		bottom 0px
		right 50%
		width 0
		height 0
		border-bottom 150px solid #fff
		border-right 1000px solid transparent
	
	&__content
		position relative
		
.h1
	margin 0 auto
	font-size 66px
	font-weight 500
	color #fff
	margin-bottom 179px

.flying-promo
	position absolute
	display inline-block
	font-size 22px
	font-weight 500
	color #fff
	
.flying-promo-1
	top -43px
	left 3px
	
.flying-promo-2
	top -113px
	right 10px
	
.flying-promo-3
	bottom 54px
	left -196px
	
.flying-promo-4
	bottom 79px
	right -141px
	
.start-scroll
	display inline-block
	color #fff
	padding 13px 14px 9px
	border 1px solid #fff
	position relative
	z-index 2
	
	&:after
		content ''
		sprite($promo_1)
		position absolute
		left 50%
		bottom -64px
		transform translateX(-50%)
				
@media (max-width 1199px)
	
	.h1
		font-size 44px
		
	.flying-promo
		font-size 20px
		
	.flying-promo-1
		top -137px
		left -74px
		
	.flying-promo-2
		top -76px
		right -100px
		
	.flying-promo-3
		bottom 128px
		left -86px
		
	.flying-promo-4
		bottom 180px
		right -120px