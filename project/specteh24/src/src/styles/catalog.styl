.cat-subheader
	background-image url(../img/cat-subheader.jpg)
	background-repeat no-repeat
	background-size cover
	padding-top 57px
	padding-bottom 45px
	position relative
	
	&:before
		gradient-line()

.cat-subheader__title
	font-size 26px
	color #ffcd34
	font-weight normal
	margin 0

.cat-subheader__txt
	font-size 16px
	margin-top 5px
	margin-bottom 0
	line-height 20px
	font-weight normal
	color #fff
	
.cat-subheader__left
	padding-right 0
	width 73%
	
.cat-subheader__right
	margin-left 0
	padding-right 10px
	width 25%
	
.cat-subheader__right__btn
	@extend .call-promo__btn
	display block
	margin 0 10px 0 0
	width 100%
	text-align center
	padding 10px 0
	height 100%
	font-size 18px
	transition ease-out 0.2s
	
	&:hover
		background-color #ffd966
		transition ease-out 0.2s
	&:active
		background-color #f6bf16
		transition ease-out 0.2s
	
.cat-subheader__right__txt
	display block
	font-size 16px
	color #fff
	margin-top 12px

.cat
	background-color #f3f3f3
	padding 10px 0 45px
	
.cat-menu__title
	font-size 26px
	margin-top 12px
	position relative
	padding-left 47px
	
.cat-menu__title:before
	content ''
	position absolute
	sprite($ex_dark_left)
	top 50%
	left 0
	transform translateY(-50%)

.cat-menu__nav ul
	list-style-type none
	padding-left 0

.cat-menu__link
	text-decoration underline
	font-size 16px
	line-height 36px
	color #353535
	
.cat-menu__link--active
	font-weight 700
	text-decoration none
	position relative
	padding-left 17px
	
.cat-menu__link--active:before
	content ''
	position absolute
	top 50%
	left 0
	transform translateY(-50%)
	sprite($arr_right_dark)

.cat-menu__btn
	background-color #354b60
	padding 8px 15px 8px 40px
	border none
	color #fff
	font-size 16px
	letter-spacing 10
	position relative
	transition ease-out 0.2s
	
	&:hover
		background-color #46617a
		transition ease-out 0.2s
	&:active
		background-color #567999
		transition ease-out 0.2s
	
.cat-menu__btn:before
	content ''
	sprite($download_btn)
	position absolute
	top 50%
	left 10px
	transform translateY(-50%)

.col-6:first-child
	padding-left 0px
	
.col-6:last-child
	padding-right 0px

.item
	background-color #fff
	padding 26px 29px
	margin-top 20px
	position relative
	
	
	&__name
		font-size 21px
		margin 0 0 25px 0
		padding-right 20px

.item--new
	overflow hidden
		
.item--new:after
	item-label('new')
	
.price
	display block
	font-size 27px
	font-weight 700
	margin-top 15px
	margin-bottom 15px
	
	&__slash
		font-size 21px
	&__txt
		font-size 18px

.item__btn
	width 50%
	display inline-block
	margin 0
	padding 10px 0
	margin-top 15px
	text-align center
	color #fff
	font-size 16px
	
.item__btn--yellow
	background-color #f3c331
	transition ease-out 0.2s
	
	&:hover
		background-color #ffd966
		transition ease-out 0.2s
	&:active
		background-color #ffc600
		transition ease-out 0.2s
	
.item__btn--dark
	background-color #354b60
	transition ease-out 0.2s
	
	&:hover
		background-color #46617a
		transition ease-out 0.2s
	&:active
		background-color #567999
		transition ease-out 0.2s

.cat-pagination
	text-align center
	margin-top 46px
	
	
.pagination
	padding-left 0

.pagination li
	display inline-block

.pagination__link
	font-size 16px
	color #353535
	text-align center
	padding 1px 7px 2px
	border-radius 3px
	box-sizing border-box
	border 2px solid transparent
	transition ease-out 0.2s
	
	&:hover
		border 2px solid rgba(#354b60 .5)
		transition ease-out 0.2s
	&:active
		border 2px solid #354b60
		transition ease-out 0.2s

.pagination__link--active
	background-color #354b60
	color #fff

.cat-offer
	background-image url(../img/cat-subfooter.jpg)
	background-repeat no-repeat
	background-size cover
	padding 40px 0 49px
	
.cat-offer__title
	color #fff
	margin 0
	
.cat-offer .col-4:first-child
	padding-left 0
	
.cat-offer .col-4:last-child
	padding-right 0
	
.item--sale
	overflow hidden
	
.item--sale:after
	item-label('sale')
	background-color #d12222

.price--offer
	font-size 22px
	display inline-block

.price--red
	display inline-block
	font-size 22px
	text-decoration line-through
	color #d12222
	margin-right 15px
