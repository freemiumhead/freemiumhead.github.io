.contact-header
	padding 45px 0 30px
	position relative
	background-image url(../img/contact-subheader.jpg)
	background-repeat no-repeat
	background-size cover
	
	&:before
		gradient-line()


.cont-subheader__title
	display inline-block
	margin 0
	line-height 43px
	font-size 26px
	font-weight normal
	color #ffcd34
	margin-right 15px
	
.contact-header-txt
	font-size 16px
	color #fff
	
.cont-subheader__right__btn
	width 25%

.contact-main
	padding 40px 0 50px
	background-color #f3f3f3

.contact-info span
	display block

.contact-phone
	font-size 18px
	font-weight 700
	position relative
	padding-left 40px
	margin-bottom 20px
	
	&:before
		content ''
		position absolute
		sprite($phone)
		top 50%
		left 0
		transform translateY(-50%)
	
.contact-email
	font-size 18px
	font-weight 700
	position relative
	padding-left 40px
	margin-bottom 20px
	
	&:before
		content ''
		position absolute
		sprite($email)
		top 50%
		left 0
		transform translateY(-50%)

.form-group input
	width 100%
	height 40px
	margin-top 10px
	border 1px solid #d5d5d5
	font-size 16px
	padding 10px
	background-color #fff
	color #000
	
.form-group__item::-webkit-input-placeholder
	color: #b0b0b0
	font-size 16px
	font-family 'PT Sans', sans-serif

.form-group__item:-moz-placeholder
	color #b0b0b0
	font-size 16px
	font-family 'PT Sans', sans-serif
	
.form-group__item::-moz-placeholder
	color #b0b0b0
	font-size 16px
	font-family 'PT Sans', sans-serif
	
.form-group__item:-ms-input-placeholder
	color #b0b0b0
	font-size 16px
	font-family 'PT Sans', sans-serif

textarea.form-group__item
	@extend .form-group input
	width 93%
	height 95px
	background-color #fff
	font-size 16px

.btn-contact
	padding 12px 20px
	width 100%
	background-color #354b60
	border none
	margin-top 20px
	font-size 18px
	color #fff
	font-weight normal

.reviews
	padding 25px 0 70px
	
.reviews__title
	font-size 26px
	color #202e3b

.reviews-item
	text-align center
	padding 0px 5px
	margin 0
	
	figcaption
		padding-top 10px
	
		blockquote
			margin 0
			font-size 14px
			color #202e3b
			font-style italic
			
		.author
			display inline-block
			padding-top 10px
			font-style normal
			font-weight 700
			color #202e3b
